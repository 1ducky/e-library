generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "mysql"
}

// Membuat Model User
model User {
  id        Int      @id @default(autoincrement())
  name      String?
  email     String   @unique
  password  String
  role      String   @default("STUDENT")
  borrows   Borrow[]
}

// Membuat Model Buku
model Book {
  id            Int       @id @default(autoincrement())
  title         String
  author        String
  category      String
  stock         Int
  borrow Borrow[]
}

// Membuat Model History Dipinjam
model Borrow {
  id         Int      @id @default(autoincrement())
  user       User     @relation(fields: [userId], references: [id])
  userId     Int
  book       Book     @relation(fields: [bookId], references: [id])
  bookId     Int
  borrowDate DateTime @default(now())
  returnDate DateTime?
  status     String   @default("BORROWED")
}
